<Page x:Class="odr.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:odr.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Вход">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Логин"/>
            <TextBox Width="100" Name="txbLogin" Margin="5" Background="#D9D9D9"
                     BorderThickness="0"/>
            <TextBlock Text="Пароль"/>
            <TextBox Width="100" Name="txbPassword" Margin="5" Background="#D9D9D9"
                     BorderThickness="0"/>
            <Button Content="Ввод" Width="100" Height="30" Margin="5" 
                    Name="btnConfirm" Click="btnConfirm_Click" Background="#A5E887" 
                    BorderThickness="0"/>
            <TextBlock Name="tbWarning" Text="Логин или пароль неверны" 
                       Visibility="Hidden"/>
            <TextBlock Name="tbNoText" Text="Введите логин и пароль" 
                       Visibility="Hidden"/>
        </StackPanel>
    </Grid>
</Page>
